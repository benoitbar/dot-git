[core]
    editor = vim
    excludesfile = ~/.gitignore

# Please, specify this variables in ~/.gitconfig-local
# it is included in the end of this file
# Note: include section work for git > 1.8
# [user]
#     name = Vasily Pupkin
#     email = pupkin@vasya.iam
#
# [credential]
#     helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring

[alias]
    st = status
    s = status -s
    ci = commit
    cm = commi  t -m
    ca = commit --amend
    save = commit -am "SAVEPOINT"
    unstage = reset HEAD
    undo = reset HEAD~
    br = branch
    co = checkout
    lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    last = log -1 HEAD

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = tracking

[diff]
    compactionHeuristic = true

[include]
    path = ~/.gitconfig-local
